<section class="container">
<form action="/iniciarSesion" method="POST" >
    <div class="row" style="height: 80vh;">
        <div class="col-sm-12 col-md-12 align-self-center">
            <div class="fixSign d-flex flex-column border p-4 rounded">
                <% if(error) { %> 
                    <div class="alert alert-dismissible alert-warning">
                        <button type="button" class="close" data-dismiss="alert">&times;</button>
                        <h4 class="alert-heading">Error</h4>
                        <p class="mb-0"><%=error %> </p>
                    </div>
                <%  } %> 
                <h3 class="text-center">Bienvenido</h3>
                <div class="form-group">
                    <label for="numberServices">Correo</label>
                    <input type="text" name="correo" class="form-control" id="inputMail" placeholder="mail@mail.com" required>
                </div>
                <div class="form-group">
                    <label for="numberServices">Contraseña</label>
                    <input type="password" name="contraseña" class="form-control" id="inputMail" placeholder="********************" required>
                </div>
                <button type="submit" class="btn btn-success w-50 m-auto">Ingresar</button>
            </div>
        </div>
    </div>
    
</form>
</section>
<%- include('./partials/footer.ejs') %> 

